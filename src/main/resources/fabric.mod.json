{
  "schemaVersion": 1,
  "id": "smoothboot",
  "version": "${version}",

  "name": "Smooth Boot",
  "description": "Optimize Minecraft's loading process to be smoother on low end systems and scale better on high end systems.\nThe effect may be different depending on the computer.",
  "authors": [
    "UltimateBoomer"
  ],
  "contact": {
    "homepage": "https://github.com/UltimateBoomer",
    "sources": "https://github.com/UltimateBoomer/smoothboot-fabric"
  },

  "license": "MIT License",
  "icon": "assets/smoothboot/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.ultimateboomer.smoothboot.SmoothBoot"
    ]
  },
  "mixins": [
    "smoothboot.mixins.json"
  ],

  "depends": {
    "fabric": "*",
    "minecraft": "1.17.x"
  },
  "suggests": {
    "flamingo": "*"
  },    
  "custom": {
    "modupdater": {
      "strategy": "curseforge",
      "projectID": 415758
    }
  }
}
